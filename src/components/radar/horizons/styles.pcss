.horizon {
  stroke:         #999;
  stroke-width:   2px;
  stroke-opacity: 0;
}

.horizonlabel {
  transition:        fill 0.5s;
  text-transform:    lowercase;
  font-variant:      small-caps;

  dominant-baseline: middle;
  text-anchor:       end;
}

.horizonlabel--active {
  composes: horizonlabel;

  fill: #eee;
}
